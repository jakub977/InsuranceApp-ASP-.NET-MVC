<!DOCTYPE html>
<html lang="cs-cz">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - InsuranceApp</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/styl.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/signin.css" asp-append-version="true" />
	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

</head>
<body id="intro" class="d-flex flex-column min-vh-100">
	
	<header>
		<nav class="navbar fixed-top navbar-expand-sm navbar-toggleable-sm navbar-dark box-shadow mb-3">
			<div class="container-fluid">
				<a class="mb-0 pb-0 navbar-brand" asp-controller="Clients" asp-action="Index"><h5>InsuranceApp</h5></a>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-white" asp-controller="Clients" asp-action="Index">Pojištěnci</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white active" asp-controller="Clients" asp-action="InsuranceList">Pojištění</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white active" asp-controller="Clients" asp-action="EventList">Pojistné události</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white active" asp-controller="Clients" asp-action="InsuranceTypes">Varianty pojištění</a>
						</li>
					</ul>
					@if (User.Identity.IsAuthenticated)
					{
						<h6 id="admin">@User.Identity.Name</h6>
						<a class="btn align-self-sm-auto align-self-md-auto mx-3 my-2 mx-sm-2 btn-outline-warning" asp-controller="Account" asp-action="Logout">Odhlásit</a>
					}
					else
					{
						<a class="btn btn-outline-success" asp-controller="Account" asp-action="Login">Přihlásit</a>
						<a class="btn mx-3 btn-outline-primary" asp-controller="Account" asp-action="Register">Registrovat</a>
					}


				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-1">
			<partial name="_Notification" /> @*Partial view fo alert messages*@
			<partial name="_Poppers" /> @*Adding Poppers*@
			@RenderBody()
		</main>
	</div>

	<footer class="footer">
		<p class="text-center text-white mb-2 pb-0"><br />Created by &copy;Jakub Šanda 2022</p>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
	<script>
		var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'))
		var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
			return new bootstrap.Popover(popoverTriggerEl)
		})
	</script>
</body>
</html>
