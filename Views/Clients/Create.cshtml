@model InsuranceApp_Accounts.Models.Client

@{
	ViewData["Title"] = "Přidat pojištěnce";
}

<div class="shadow p-3 rounded table-responsive-md text-nowrap">
	<div><h3>Nový pojištěnec</h3></div>

	<form method="post" asp-action="Create">
		<div class="row row-cols-2">

			<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
				<label asp-for="FirstName"><h5 style="color:white">Jméno</h5></label>
				<input asp-for="FirstName" type="text" class="form-control">
			</div>

			<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
				<label asp-for="LastName"><h5>Příjmení</h5></label>
				<input asp-for="LastName" type="text" class="form-control">
			</div>

			<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
				<label asp-for="Email"><h5 style="color:white">Email</h5></label>
				<input asp-for="Email" type="email" class="form-control">
			</div>

			<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
				<label asp-for="Phone"><h5>Telefon</h5></label>
				<input asp-for="Phone" class="form-control">
			</div>

			<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
				<label asp-for="Address"><h5 style="color:white">Celá adresa</h5></label>
				<input asp-for="Address" type="text" class="form-control">
			</div>

			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<hr mx-5 />
			</div>


		</div>

		<div class="form-group text-center">
			<button type="submit" value="Create" class="btn mx-3 mt-3 btn-success"><i class="bi bi-check-circle-fill"></i> Uložit</button>
			<a asp-controller="Clients" asp-action="Index" class="btn mx-3 mt-3 btn-secondary"><i class="bi bi-arrow-left-circle-fill"></i> Zpět</a>
		</div>

	</form>

</div>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
	}