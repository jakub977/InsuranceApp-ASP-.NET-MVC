@model IEnumerable<InsuranceApp_Accounts.Models.Client>

@{
	ViewData["Title"] = "Seznam pojistných událostí";

	Pager pager = new Pager();
	int pageNo = 0;
	if (ViewBag.Pager != null)
	{
		pager = ViewBag.Pager;
		pageNo = pager.CurrentPage;
	}
}

<div id="background_main" class="shadow my-0 p-3 rounded table-responsive">

	

	<div><h3>Seznam pojistných událostí</h3></div>

	<table id="table-main" class="table">
		<thead class=" table-dark">
			<tr>
				<th>Č. pojistné události</th>
				<th>Předmět poj. události</th>
				<th>Datum poj. události</th>
				<th>Možnosti</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var client in Model)
			{
				@if (client.EventSubject != null) // If must be inside the model
				{
					<tr>
						<td>325 @client.Id</td>
						<td>@client.EventSubject</td>
						<td>@client.EventDate</td>
						<td>
							<a class="btn mx-2 btn-sm btn-log btn-outline-info" asp-controller="Clients" asp-action="EventDetails" asp-route-id="@client.Id"><i class="bi bi-info-circle-fill"></i> Zobrazit podrobnosti</a>
						</td>
					</tr>
				}
			}
		</tbody>
	</table>
</div>

<partial name="_PagerEvents" model="@pager" /> @*Adding Pagination*@
