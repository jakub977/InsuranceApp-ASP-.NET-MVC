@model InsuranceApp_Accounts.Models.Client

@{
	ViewData["Title"] = "Přidání pojištění";
}

<div class="shadow p-3 rounded table-responsive-md text-nowrap">
	<div><h3>Přidání pojištění</h3></div>

	<form method="post" asp-action="AddInsurance">
		<input type="hidden" asp-for="Id" />
		<div class="row row-cols-2">

			<div id="select" class="row form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
				<select asp-for="Insurance" class="form-select col-lg-12 col-md-12 col-sm-12 col-xs-12" aria-label="Default select example">
					<option selected>Vyberte typ pojištění</option>
					<option value="Pojištění majetku">Pojištění majetku</option>
					<option value="Pojištění úrazu">Pojištění úrazu</option>
					<option value="Životní pojištění">Životní pojištění</option>
					<option value="Povinné ručení">Povinné ručení</option>
				</select>
			</div>

			<div id="select" class="row form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
			</div>

			<div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
				<label asp-for="Subject" class="control-label"><h5 style="color:white">Předmět pojištění:</h5></label>
				<input asp-for="Subject" type="text" class="form-control" placeholder="Auto">
				<span asp-validation-for="Subject" class="text-danger"></span>
			</div>

			<div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
				<label asp-for="Limit" class="control-label"><h5>Limit plnění v Kč:</h5></label>
				<input asp-for="Limit" type="text" class="form-control" placeholder="1.000.000">
				<span asp-validation-for="Limit" class="text-danger"></span>
			</div>

			<div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
				<label asp-for="StartDate" class="control-label"><h5 style="color:white">Počátek pojištění:</h5></label>
				<input asp-for="StartDate" type="date" class="form-control" placeholder="1.1.2023">
				<span asp-validation-for="StartDate" class="text-danger"></span>
			</div>

			<div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
				<label asp-for="EndDate" class="control-label"><h5>Konec pojištění:</h5></label>
				<input asp-for="EndDate" type="date" class="form-control" placeholder="1.1.2023">
				<span asp-validation-for="EndDate" class="text-danger"></span>
			</div>

			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<hr mx-5 />

				<div id="hidden">
					<!--Hides unused forms but still submits their data-->

					<h4>Informace o pojištěnci</h4>

					<div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
						<label asp-for="FirstName" class="control-label"><h6>Jméno:</h6></label>
						<input id="disabled" asp-for="FirstName" type="text" class="form-control" placeholder="Jan">
						<span asp-validation-for="FirstName" class="text-danger"></span>
					</div>

					<div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
						<label asp-for="LastName" class="control-label"><h6>Příjmení:</h6></label>
						<input id="disabled" asp-for="LastName" type="text" class="form-control" placeholder="Novák">
						<span asp-validation-for="LastName" class="text-danger"></span>
					</div>

					<div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
						<label asp-for="Email" class="control-label"><h6>Email:</h6></label>
						<input id="disabled" asp-for="Email" type="email" class="form-control" placeholder="jan.novak@gmail.com">
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>

					<div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
						<label asp-for="Phone" class="control-label"><h6>Telefon:</h6></label>
						<input id="disabled" asp-for="Phone" class="form-control" placeholder="+420 123 456 789">
						<span asp-validation-for="Phone" class="text-danger"></span>
					</div>

					<div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
						<label asp-for="Address" class="control-label"><h6>Celá adresa:</h6></label>
						<input id="disabled" asp-for="Address" type="text" class="form-control" placeholder="Ve Svahu 33, Praha 100 00">
						<span asp-validation-for="Address" class="text-danger"></span>
					</div>
				</div>
			</div>

		</div>

		<div class="form-group text-center">
			<button type="submit" value="Save" asp-route-id="@Model.Id" class="btn mx-3 mt-3 btn-success"><i class="bi bi-check-circle-fill"></i> Uložit</button>
			<a asp-controller="Clients" asp-action="Details" asp-route-id="@Model.Id" class="btn mx-3 mt-3 btn-secondary"><i class="bi bi-arrow-left-circle-fill"></i> Zpět</a>
		</div>

	</form>

</div>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
	}